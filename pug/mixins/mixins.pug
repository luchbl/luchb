//- hotline link
mixin phone_a(className)
    a(href="tel:"+phoneNumber class=className title="" alt="" target="_self")&attributes(attributes)
        if block
            block
        else
            +phone_text()
mixin phone_text()
    if block
        block
    else
        =phoneNumber
        block

//- email links
mixin mail_a(className)
    a(href="mailto:"+mailAddress class=className title="" alt="" target="_self")&attributes(attributes)
        if block
            block
        else
            +mail_text()
mixin mail_text()
    if block
        block
    else
        =mailAddress
        block

//- Address
mixin address()
    if block
        block
    else
        =Address
        block
//- Fax
mixin fax()
    if block
