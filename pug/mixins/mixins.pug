//- Thong tin lien he default
mixin contact_info()
    .picon
        i.far.fa-map-marker-alt
        +address()
    .picon
        i.far.fa-envelope
        +mail_a()
    .picon
        i.far.fa-phone.fa-flip-horizontal
        +phone_a()
    .picon
        i.far.fa-fax
        +fax()
    .picon
        i.far.fa-globe
        +website()

//- Mang xa hoi Social
mixin list_social(className)
    .list-icon-social(class=className)
        +a('#', 'btn rounded-circle fs-22 btn-facebook bi bi-facebook')(target="_blank")
        +a('#', 'btn rounded-circle fs-22 btn-youtube bi bi-youtube')(target="_blank")
        +a('#', 'btn rounded-circle fs-22 btn-zalo icon-zalo')(target="_blank")
        +phone_a('btn rounded-circle fs-20 btn-phone'): i.fa.fa-phone.fa-flip-horizontal

//- the a co san title & alt
mixin a(href, className, value)
    a(href=href class=className title="" alt="" target="_self")&attributes(attributes)
        if block
            block
        else
            =value
            block

//- breadcrumb
mixin breadcrumb(listPage)
    nav(arial-label="breadcrumb")
        ol.breadcrumb
            each name, href in listPage
                li.breadcrumb-item: a(href=href title="" alt="" target="_self")= name
            li.breadcrumb-item.active=title

//- pagination
mixin pagination(className)
    nav.pagination(class=className)
        .page-item.prev.disabled
            +a('#', 'prev-page')
                i.bi.bi-arrow-left.mr-2
                | Prev
        .page-item.page-counter
            input(type="text" class="form-control" value="1")
            span.text-counter / 158
        .page-item.next
            +a('#', 'next-page')
                | Next
                i.bi.bi-arrow-right.ml-2

//- pagination 2
mixin pagination2(className)
    nav(aria-label="pagination")
        ul.pagination(class=className)
            li.page-item.d-none
                +a('#', 'page-link', '')
                    i.bi.bi-arrow-left
            li.page-item.active
                +a('#', 'page-link', '1')
            li.page-item
                +a('#', 'page-link', '2')
            li.page-item
                +a('#', 'page-link', '3')
            li.page-item
                +a('#', 'page-link', '20')
            li.page-item
                +a('#', 'page-link', '')
                    i.bi.bi-arrow-right

//- ads
mixin ads(img)
    +a('#', 'block mb-2', '')
        img(src="css/skin/ads/"+img alt="Image Ads")


//- embed youtube
mixin youtube_embed(id)
    iframe(width="100%" height="100%" src="https://www.youtube.com/embed/"+id title="YouTube Video" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)

mixin youtube_thumb(className, id)
    .bg-cover(class=className)(style="background-image:url(http://i3.ytimg.com/vi/"+id+"/maxresdefault.jpg)")
        if block
            block


//- Google Map embed
mixin map(src)
    iframe(src=src width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy")


